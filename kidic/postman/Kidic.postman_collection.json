                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Parent Name\",\n  \"phone\": \"1234567890\",\n  \"email\": \"parent@example.com\",\n  \"gender\": true,\n  \"password\": \"yourpassword\"\n}"
                        }
                    },
                    "event": [{
                        "listen": "test",
