{
    "info": {
        "name": "Kidic API",
        "_postman_id": "kidic-api-collection",
        "description": "Postman collection for Kidic backend APIs with sample request bodies.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        { "key": "baseUrl", "value": "http://localhost:8080/api" },
        { "key": "token", "value": "" }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Sign Up (New Family)",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Content-Type", "value": "application/json" }],
                        "url": { "raw": "{{baseUrl}}/auth/signup/new-family", "host": ["{{baseUrl}}"], "path": ["auth", "signup", "new-family"] },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Parent Name\",\n  \"phone\": \"1234567890\",\n  \"email\": \"parent@example.com\",\n  \"gender\": true,\n  \"password\": \"yourpassword\"\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var json = pm.response.json();",
                                    "if(json.token){",
                                    "    pm.collectionVariables.set('token', json.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "Sign Up (Existing Family)",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Content-Type", "value": "application/json" }],
